<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".BottomSheetDialog"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="75dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_cornes_rounded"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="25dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/heart_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/item_rounded_button"
            android:src="@drawable/image_heart"
            android:layout_marginRight="45dp"/>

        <ImageButton
            android:id="@+id/picture_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/item_rounded_button"
            android:src="@drawable/image_picture"
            android:layout_marginRight="45dp"/>

        <ImageButton
            android:id="@+id/download_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/item_rounded_button"
            android:src="@drawable/image_download"
            android:layout_marginRight="45dp"/>

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/item_rounded_button"
            android:src="@drawable/image_share"
            />
    </LinearLayout>

</LinearLayout>